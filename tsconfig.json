{
  "compilerOptions": {
    "jsx": "preserve",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": { },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"] 
  },
  "include": ["src/**/*"]
}